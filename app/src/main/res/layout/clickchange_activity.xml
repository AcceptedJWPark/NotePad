<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:id="@+id/container_clickchange"
    >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="글쓰기 버튼\n클릭 방식을 선택하세요."
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:gravity="left"
        android:textColor="#000"
        android:text="글쓰기 방식이 틀렸을 때\n일반글 작성 페이지로 이동합니다.\n글쓰기 방식이 맞아야 비밀글을 작성합니다."
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tv1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv2"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/ll_clicktype1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_clicktype1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/clickchange1_1"
                    />

                <TextView
                    android:id="@+id/tv_clicktype1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일반클릭"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:textColor="#544f4f"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_clicktype2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_clicktype2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/clickchange2_1"
                    />

                <TextView
                    android:id="@+id/tv_clicktype2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="더블클릭"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:textColor="#707070"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_clicktype3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_clicktype3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/clickchange3_1"
                    />

                <TextView
                    android:id="@+id/tv_clicktype3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="롱클릭(1초)"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:textColor="#707070"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_clicktype4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_clicktype4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/clickchange4_1"
                    />

                <TextView
                    android:id="@+id/tv_clicktype4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="롱클릭(3초)"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"
                    android:textColor="#707070"
                    />

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        >




        <Button
            android:id="@+id/btn_next_page2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgr_mainbtn"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="완료"
            />


    </LinearLayout>


</RelativeLayout>